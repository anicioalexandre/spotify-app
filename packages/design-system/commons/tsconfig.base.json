{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["ES2017", "DOM"],
    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "declaration": true
  }
}
